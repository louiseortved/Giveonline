
@{
    ViewBag.Title = "CreateRole";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}



<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-plus"></i>Opret en rolle<br><small>Her kan du oprette en ny rolle</small>
            </h1>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li>Roller</li>
        <li>Tilføj en rolle</li>

    </ul>
    <div class="block block-alt-noborder">
        <h3 class="sub-header">Opret <small>en ny rolle</small></h3>

    

        <form role="form" action="/Account/CreateRole" method="post">

            <div class="form-group">
                <label class="control-label" for="roleName">Rollenavn</label>
         
                    <input type="text" class="form-control" name="roleName" placeholder="Indtast en rolle" required>

            </div>

            <button type="submit" class="btn btn-default">Gem</button>


        </form>
    </div>
</div>




