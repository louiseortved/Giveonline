@model Giveonline.Models.Size


@{
    ViewBag.Title = "SizeEdit";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}

<h2>SizeEdit</h2>


<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-pencil"></i>Rediger størrelse<br><small>Her kan du redigere en størrelse</small>
            </h1>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li>Størrelse</li>
        <li>Redigér en størrelse</li>

    </ul>
    <div class="block block-alt-noborder">
        <h3 class="sub-header">@Model.Title <small>Redigér kategori</small></h3>
        <form role="form" action="/Admin/SizeEdit" method="post">

            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="form-group">
                <label class="control-label" for="Title">Title</label>
                <input type="text" value="@Model.Title" class="form-control" name="Title" placeholder="Indtast en Titel">
            </div>

            <button type="submit" class="btn btn-default">Gem</button>
            <a href="@Url.Action("Size")" type="reset" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>
