
@{
    ViewBag.Title = "SizeCreate";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}


<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-plus"></i>Opret en størrelse<br><small>Her kan du oprette en størrelse</small>
            </h1>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li>Størrelse</li>
        <li>Tilføj en størrelse</li>

    </ul>
    <div class="block block-alt-noborder">
        <h3 class="sub-header">Opret <small>en ny størrelse</small></h3>
        <form role="form" action="/Admin/SizeCreate" method="post">

            <div class="form-group">
                <label class="control-label" for="Title">Title</label>
                <input type="text" class="form-control" name="Title" placeholder="Indtast title">
            </div>

            <button type="submit" class="btn btn-default">Gem</button>
            <a href="@Url.Action("Size")" type="reset" class="btn btn-danger">Cancel</a>

        </form>
    </div>
</div>


