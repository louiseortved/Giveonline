@model Giveonline.Models.About


@{
    ViewBag.Title = "ContentCreate";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}

<div id="page-content">
    <div class="content-header">

        <ul class="nav-horizontal text-center">
            <li>
                <a href="/admin/index"><i class="fa fa-tachometer"></i> Dashboard</a>
            </li>
            <li>
                <a href="/admin/eventlist"><i class="fa fa-calendar"></i> Events</a>
            </li>
            <li>
                <a href="/admin/donationlist"><i class="fa fa-money"></i> Donations</a>
            </li>
            <li>
                <a href="/admin/storieslist"><i class="fa fa-folder-open"></i> Stories</a>
            </li>
            <li>
                <a href="/admin/Slider"><i class="fa fa-picture-o"></i> Slider</a>
            </li>
            <li class="active">
                <a href="/admin/contentlist"><i class="fa fa-users"></i> About Us</a>
            </li>
        </ul>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="block-title">
                    <h2><i class="fa fa-pencil"></i> <strong>Opret</strong> Donation</h2>
                </div>

                <form role="form" action="/Admin/ContentCreate" id="contentCreate" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered">


                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Titel">Titel</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="Title" placeholder="Indtast titel" required>
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Description">Beskrivelse</label>
                        <div class="col-md-8">
                            <textarea type="text" class="form-control" name="Description" placeholder="Beskrivelse" required></textarea>
                        </div>
                    </div>



                    <div class="form-group form-actions">
                        <div class="col-md-9 col-md-offset-3">
                            <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-floppy-o"></i> Gem</button>
                            <a href="@Url.Action("ContentList")" type="reset" class="btn btn-sm btn-warning"><i class="fa fa-repeat"></i> Fortryd</a>


                        </div>
                    </div>


                </form>


            </div>
        </div>
    </div>





</div>



