
@{
    ViewBag.Title = "NewsletterCreate";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}



<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-plus"></i>Opret et nyhedsbrev<br><small>Her kan du oprette et nyhedsbrev</small>
            </h1>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li>Nyhedsbreve</li>
        <li>Opret et nyhedsbrev</li>
     
    </ul>
    <div class="block block-alt-noborder">
        <h3 class="sub-header">Opret et nyhedsbrev <small></small></h3>

        <form role="form" action="/Admin/NewsletterCreate" method="post">
  
    
            <div class="form-group">
                <label class="control-label" for="Title">Newsletter</label>
                <input type="text" class="form-control" name="Title" placeholder="Indtast titel">
            </div>

            <div class="form-group">
                <label class="control-label" for="HtmlContent">Content</label>
                <textarea id="summernote" rows="15" name="HtmlContent" class="form-control"></textarea>  
            </div>


            <button type="submit" class="btn btn-default">Gem</button> 

        </form>
    </div>
</div>







@section scripts{
    <link href="~/Scripts/summernote/summernote.css" rel="stylesheet" />
    <script src="~/Scripts/summernote/summernote.min.js"></script>
    <script>
        $('#summernote').summernote({
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true                  // set focus to editable area after initializing summernote
        });
    </script>
}