
@{
    ViewBag.Title = "BrandCreate";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}

<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-plus"></i>Opret et mærke<br><small>Her kan du oprette en nyt mærke</small>
            </h1>
        </div>
    </div>
    <ul class="breadcrumb breadcrumb-top">
        <li>Mærke</li>
        <li>Tilføj et mærke</li>

    </ul>
    <div class="block block-alt-noborder">
        <h3 class="sub-header">Opret <small>en ny kategori</small></h3>
        <form role="form" action="/Admin/BrandCreate" method="post">

            <div class="form-group">
                <label class="control-label" for="Title">Title</label>
                <input type="text" class="form-control" name="Title" placeholder="Indtast title">
            </div>
            
            
            <div class="form-group">
                <label class="control-label" for="files">Image</label>
             
                    <input id="file" type="file" name="files" class="form-control" placeholder="Upload et nyt billede" required />
        
            </div>

            <button type="submit" class="btn btn-default">Gem</button>
            <a href="@Url.Action("Brand")" type="reset" class="btn btn-danger">Cancel</a>

        </form>
    </div>
</div>


