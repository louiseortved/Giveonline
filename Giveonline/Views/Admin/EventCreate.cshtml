            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="block">
                <div class="block-title">
                    <h2><i class="fa fa-pencil"></i> <strong>Opret</strong> Event</h2>
                </div>

                <form role="form" action="/Admin/EventCreate" id="eventCreate" method="post" enctype="multipart/form-data" class="form-horizontal form-bordered">


                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Titel">Titel</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="Title" placeholder="Indtast titel" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Description">Beskrivelse</label>
                        <div class="col-md-8">
                            <textarea type="text" class="form-control" name="Description" placeholder="Beskrivelse" required></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" for="DateOfEvent">Dato</label>
                        <div class="col-md-8">
                            <input type="date" class="form-control" name="DateOfEvent" placeholder="Indtast en dato">
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-md-3 control-label" for="Location">Sted</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" name="Location" placeholder="Indtast en lokation" required>
                        </div>
                    </div>


                    @*<div class="form-group">
                            <label class="col-md-3 control-label" for="Price">Pris</label>
                            <div class="col-md-8">
                                <div class="input-group">
                                    <div class="input-group-addon"><i class="fa fa-money"></i></div>
                                    <input type="text" id="product-price" name="Price" class="form-control" placeholder="0,00" required>
                                </div>
                            </div>
                        </div>*@



                    <div class="form-group">
                        <label class="col-md-3 control-label" for="image">Image</label>
                        <div class="col-md-8">
                            <input id="image" type="file" name="file" class="form-control" placeholder="Upload et nyt billede" required />
                        </div>
                    </div>


                    <div class="form-group form-actions">
                        <div class="col-md-9 col-md-offset-3">
                            <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-floppy-o"></i> Gem</button>
                            <a href="@Url.Action("EventList")" type="reset" class="btn btn-sm btn-warning"><i class="fa fa-repeat"></i> Fortryd</a>


                        </div>
                    </div>


                </form>


            </div>
        </div>
    </div>
</div>


