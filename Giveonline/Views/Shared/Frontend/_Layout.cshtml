<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/styles/css/Frontend_Layout.min.css" rel="stylesheet" />
    @RenderSection("Styles", false)




</head>
<body>
    <div id="page-container">
        <div class="navbar-wrapper">
            <div class="container">
                <nav class="navbar navbar-default navbar-static-top">

                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a href="/home"><img class="img-responsive logo" src="~/Content/styles/Images/Logo-1.png" /></a>


                        </div>

                        <div id="navbar" class="navbar-collapse collapse">
                            <div class="col-md-4 col-md-push-4 Searchbar-align">

                                <form action="/home/search" class="navbar-form" role="search">
                                    <div id="custom-search-input">
                                        <div class="input-group col-md-12">

                                            <input type="search" name="query" class="search-query form-control" id="Search" placeholder="Search" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" type="button">
                                                    <span class="fa fa-search"></span>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                    @*<div class="input-group">
                                            <input type="text" class="form-control" placeholder="Search" name="q">
                                            <div class="input-group-btn">
                                                 <button type="submit" class="btn"><i class="icon_search"></i></button>
                                            </div>
                                        </div>*@
                                </form>
                            </div>
                            <div class="col-md-4 col-md-push-4 Searchbar-align">
                                <div class="element">
                                </div>
                            </div>


                            <ul class="nav navbar-nav navbar-right">


                                <li><a href="/home/about">ABOUT</a></li>
                                <li><a href="/home/GIVEonline">GIVEonline</a></li>
                                <li><a href="/home/upcommingevents">EVENTS</a></li>
                                <li><a href="/home/shop">SHOP</a></li>
                            </ul>

                        </div><!--/.nav-collapse -->
                    </div><!--/.container-fluid -->
                </nav>

            </div>
        </div>






        @*<div class="col-md-5 pull-right">
                <form class="navbar-form" role="search">
                    <div class="input-group add-on">
                        <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                        <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>
            </div>*@



        <div>
            @RenderBody()
        </div>

        <footer>

            <div class="col-md-12 footerbox">
                <div class="col-md-3 col-md-push-1 ">
                    <h4 class="Newsletterheading">SIGN UP TO OUR NEWSLETTER</h4>

                    <a class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">EMAIL SIGNUP</a>
                </div>

                <div class="col-md-3 col-md-push-1">
                    <h4 class="Newsletterheading">NEXT EVENT</h4>
                    @Html.Action("_UpcommingEvent", "Home")


                </div>

                <div class="col-md-3 col-md-push-2">
                    <h4 class="NewsletterheadingSocial">CONNECT WITH US</h4>
                    <div class="col-md-12">
                        <div class="col-md-2">

                            <img class="socialIcon" src="~/Content/styles/Images/facebook.png" />
                        </div>
                        <div class="col-md-2">


                            <img class="socialIcon" src="~/Content/styles/Images/twitter.png" />
                        </div>
                        <div class="col-md-2">


                            <img class="socialIcon" src="~/Content/styles/Images/yputube.png" />
                        </div>
                        <div class="col-md-2">


                            <img class="socialIcon" src="~/Content/styles/Images/paypal.png" />
                        </div>
                        <div class="col-md-2">
                            <img class="socialIcon" src="~/Content/styles/Images/mail.png" />

                        </div>
                    </div>
                </div>
                <div class="col-md-10 col-md-push-1">
                    <hr />
                    <p class="footertext">&reg; Copyright 2016 Mercandice Online. All rights reserved</p>
                </div>

            </div>
        </footer>


        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">

                    <div class="modal-body">
                        @Html.Action("_AddSubscriber", "Home")
                    </div>

                </div>

            </div>
        </div>



    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("bundles/dropzonescripts")
    @RenderSection("scripts", required: false)
</body>
</html>
